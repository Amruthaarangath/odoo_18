<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="crm_dashboard.CrmDashboard">
        <div style="max-height: 100vh; overflow-y:auto; padding: 10px;">
            <div class="">
                <div>
                    <center>
                        <h1 style="margin:20px;">
                            CRM Dashboard
                        </h1>
                    </center>
                    <div>Filter:
                        <div class="o_input d-flex flex-wrap gap-1 o_multi_record_selector">
                            <select class="col-md-5" id="filter" name="Filter" t-ref="dataFilter" t-on-change="filterDasboard" t-model="state.filter">
                                <t t-log ="state"/>
                                <option value="">select...</option>
                                <option>This year</option>
                                <option>This quater</option>
                                <option>This month</option>
                                <option>This week</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row main-section" style="margin-left: 120px;">
                <!--            Lead Tile-->
                <div id="leads" class="col-md-4 col-sm-6 tot_tasks oh-payslip"
                     style=" overflow: hidden; padding-top: 30px;">
                    <div class="oh-card" style="box-shadow:2px 4px 8px 2px rgba(0, 0, 0, 0.75);
                display: flex; justify-content: center;" role="button" t-on-click.stop.prevent="() => this.leadTile()">
                        <div class="oh-card-body"
                             style="padding: 5px 5px; float: left; width: 100%;
                          height: auto; box-sizing: border-box; margin: 0;">
                            <div class="stat-widget-one">
                                <div class="stat-icon bg-mauve-light d-flex justify-content-left align-items-left">
                                    <div style="background:#ff4d94; width:65px; text-align: center;">
                                        <i class="fa fa-tasks text-mauve"
                                           style="font-size:50px;"/>
                                    </div>
                                    <div class="stat_content" style="
                                  text-align: center; font-weight: bold;
                                  padding-top: 20px; padding-left: 80px;">
                                        <div class="stat_count_lead"
                                             style="font-size: 17px;">
                                            <span id="templates">
                                                <div id="my_lead" t-ref="leadData" />
                                            </span>
                                        </div>
                                        <div class="stat-head"
                                             style="font-size: 14px;">My Leads
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--       Opportunity Tile-->
                <div id="opportunity" class="col-md-4 col-sm-6 tot_tasks oh-payslip"
                     style=" overflow: hidden; padding-top: 30px;">
                    <div class="oh-card" style="box-shadow:2px 4px 8px 2px  rgba(0, 0, 0, 0.75);
                display: flex; justify-content: center;" role="button"
                         t-on-click.stop.prevent="() => this.oppourtunityTile()">
                        <div class="oh-card-body"
                             style="padding: 5px 5px; float: left; width: 100%;
                          height: auto; box-sizing: border-box; margin: 0;">
                            <div class="stat-widget-one">
                                <div class="stat-icon bg-mauve-light d-flex justify-content-left align-items-left">
                                    <div style="background:yellow; width:65px; text-align: center;">
                                        <i class="fa fa-trophy  text-mauve"
                                           style="font-size:50px;"/>
                                    </div>
                                    <div class="stat-content" style="
                                  text-align: center; font-weight: bold;
                                  padding-top: 20px; padding-left: 80px;">
                                        <div class="stat_count_opp"
                                             style="font-size: 17px;">
                                            <span id="templates">
                                                <div id="my_opportunity"/>
                                            </span>
                                        </div>
                                        <div class="stat-head"
                                             style="font-size: 14px;">My Opportunity
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--            Expected Revenue -->
                <div id="expected_revenue"
                     class="col-md-4 col-sm-6 tot_tasks oh-payslip"
                     style=" overflow: hidden; padding-top: 30px;">
                    <div class="oh-card" style="box-shadow:2px 4px 8px 2px rgba(0, 0, 0, 0.75);
                display: flex; justify-content: center;" role="button">
                        <div class="oh-card-body"
                             style="padding: 5px 5px; float: left; width: 100%;
                          height: auto; box-sizing: border-box; margin: 0;">
                            <div class="stat-widget-one">
                                <div class="stat-icon bg-mauve-light d-flex justify-content-left align-items-left">
                                    <div style="background:#bf80ff;; width:65px; text-align: center;">
                                        <i class="fa fa-usd  text-mauve"
                                           style="font-size:50px;"/>
                                    </div>
                                    <div class="stat-content" style="
                                  text-align: center; font-weight: bold;
                                  padding-top: 20px; padding-left: 80px;">
                                        <div class="stat_count_ex_rev"
                                             style="font-size: 17px;">
                                            <span id="templates">
                                                <div id="revenue"/>
                                            </span>
                                        </div>
                                        <div class="stat-head"
                                             style="font-size: 14px;">Expected
                                            revenue
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!--       Total Revenue -->
                <div id="total_revenue"
                     class="col-md-4 col-sm-6 tot_tasks oh-payslip"
                     style=" overflow: hidden; padding-top: 30px;">
                    <div class="oh-card" style="box-shadow:2px 4px 8px 2px  rgba(0, 0, 0, 0.75);
                display: flex; justify-content: center;" role="button">
                        <div class="oh-card-body"
                             style="padding: 5px 5px; float: left; width: 100%;
                          height: auto; box-sizing: border-box; margin: 0;">
                            <div class="stat-widget-one">
                                <div class="stat-icon bg-mauve-light d-flex justify-content-left align-items-left">
                                    <div style="background:#bf80ff;; width:65px; text-align: center;">
                                        <i class="fa fa-usd  text-mauve"
                                           style="font-size:50px;"/>
                                    </div>
                                    <div class="stat-content" style="
                                  text-align: center; font-weight: bold;
                                  padding-top: 20px; padding-left: 80px;">
                                        <div class="stat_count_opp"
                                             style="font-size: 17px;">
                                            <span id="templates">
                                                <div id="revenue_total"/>
                                            </span>
                                        </div>
                                        <div class="stat-head"
                                             style="font-size: 14px;">Revenue
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!-- won or lost -->
                <div id="won_or_lost"
                     class="col-md-4 col-sm-6 tot_tasks oh-payslip"
                     style=" overflow: hidden; padding-top: 30px;">
                    <div class="oh-card" style="box-shadow:2px 4px 8px 2px  rgba(0, 0, 0, 0.75);
                display: flex; justify-content: center;" role="button">
                        <div class="oh-card-body"
                             style="padding: 5px 5px; float: left; width: 100%;
                          height: auto; box-sizing: border-box; margin: 0;">
                            <div class="stat-widget-one">
                                <div class="stat-icon bg-mauve-light d-flex justify-content-left align-items-left">
                                    <div style="background:#bf80ff;; width:65px; text-align: center;">
                                        <i class="fa-regular fa-colon"
                                           style="font-size:50px;"/>
                                    </div>
                                    <div class="stat-content" style="
                                  text-align: center; font-weight: bold;
                                  padding-top: 20px; padding-left: 80px;">
                                        <div class="stat_count_opp"
                                             style="font-size: 17px;">
                                            <span id="templates">
                                                <div id="lead_lost_ratio"/></span>:<span><div id="lead_won_ratio"/></span>
                                        </div>
                                        <div class="stat-head"
                                             style="font-size: 14px;">Won or Lost ratio
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- doughnut_chart -->
                <div class="col-md-6">
                    <div class="s_chart" data-type="doughnut" data-legend-position="none" data-tooltip-display="false"
                         data-stacked="false" data-border-width="2"
                         data-data='{"labels":["First","Second"],"datasets":[{"label":"One","data":["25","75"],"backgroundColor":["o-color-3","o-color-2"],"borderColor":["",""]}]}'
                         data-snippet="s_chart" data-name="Chart">
                        <canvas id="doughnut_chart" style="box-sizing: border-box;" width="456" height="228"/>
                    </div>
                </div>
                <!-- pie_chart -->
                <div class="col-md-6">
                    <div class="s_chart" data-type="doughnut" data-legend-position="none" data-tooltip-display="false"
                         data-stacked="false" data-border-width="2"
                         data-data='{"labels":["First","Second"],"datasets":[{"label":"One","data":["25","75"],"backgroundColor":["o-color-3","o-color-2"],"borderColor":["",""]}]}'
                         data-snippet="s_chart" data-name="Chart">
                        <canvas id="pie_chart" style="box-sizing: border-box;" width="456" height="228"/>
                    </div>
                </div>
                <!-- line_chart -->
                <div class="col-md-6">
                    <div class="s_chart" data-type="doughnut" data-legend-position="none" data-tooltip-display="false"
                         data-stacked="false" data-border-width="2">
                        <canvas id="line_chart" style="box-sizing: border-box;" width="456" height="228"/>
                    </div>
                </div>
                <!-- bar_chart -->
                <div class="col-md-6">
                    <div class="s_chart" data-type="doughnut" data-legend-position="none" data-tooltip-display="false"
                         data-stacked="false" data-border-width="2"
                         data-data='{"labels":["First","Second"],"datasets":[{"label":"One","data":["25","75"],"backgroundColor":["o-color-3","o-color-2"],"borderColor":["",""]}]}'
                         data-snippet="s_chart" data-name="Chart">
                        <canvas id="bar_chart" style="box-sizing: border-box;" width="456" height="228"/>
                    </div>
                </div>
                <!-- table_chart -->
                <div style="box-sizing: border-box; display: block; height: 1000px; width: 10.00px;">
                    <div class="col-md-6">
                        <div class="s_chart" data-type="doughnut" data-legend-position="none"
                             data-tooltip-display="false"
                             data-stacked="false" data-border-width="2"
                             data-data='{"labels":["First","Second"],"datasets":[{"label":"One","data":["25","75"],"backgroundColor":["o-color-3","o-color-2"],"borderColor":["",""]}]}'
                             data-snippet="s_chart" data-name="Chart">
                            <canvas id="table_chart"/>
                            <!--                        <table class="table report_border table-hover table-striped">-->
                            <table border="5" cellpadding="5" cellspacing="5" style="padding-top: 16px; background-color: #F1F1F1; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;" class="table report_border table-hover table-striped">
                                <row>
                                    <tr align="center" style="min-width: 590px;">
                                        <th align="center" style="min-width: 590px;">Months</th>
                                        <th align="center" style="min-width: 590px;">Leads</th>
                                    </tr>
                                    <div>
                                        <row>
                                            <tr>
                                                <td align="center" style="min-width: 590px;">
                                                    <row>
                                                        <tr t-foreach="state.month" t-as="item" t-key="item">
                                                            <td align="center" style="min-width: 590px;">
                                                                <span>
                                                                    <row>
                                                                        <t t-esc="item"/>
                                                                    </row>
                                                                </span>
                                                            </td>
                                                        </tr>
                                                    </row>
                                                </td>
                                                <td align="center" style="min-width: 590px;">
                                                    <tr t-foreach="state.monthLead" t-as="item" t-key="item">
                                                        <span>
                                                            <row>
                                                                <t t-esc="item"/>
                                                            </row>
                                                        </span>
                                                    </tr>
                                                </td>
                                            </tr>
                                        </row>
                                    </div>
                                </row>
                            </table>
                        </div>
                    </div>
                </div>
                <!--                </div>-->
            </div>
        </div>
    </t>
</templates>
