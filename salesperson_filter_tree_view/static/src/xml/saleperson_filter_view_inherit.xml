<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="salesperson_filter_tree_view.Selection"
       t-inherit="web.ListView" t-inherit-mode="primary">
        <xpath expr="//t[@t-component='props.Renderer']" position="before">
            <div>Sales person:
                <div class="col-md-5">
                    <select id="partner_id" name="Sales person" t-on-change="updateFilter" t-model="state.partner">
                        <t t-log="state.partner"/>
                        <option value="">select...</option>
                            <t t-log="this"/>
                                <t t-foreach="state.partner_id" t-as="partner_id" t-key="partner_id.id">
                                    <option t-att-value="partner_id.id">
                                        <t t-out="partner_id.name"/>
                                        <t t-log="partner_id.name"/>
                                    </option>
                                </t>
                    </select>
                </div>
            </div>
        </xpath>
    </t>
</templates>

