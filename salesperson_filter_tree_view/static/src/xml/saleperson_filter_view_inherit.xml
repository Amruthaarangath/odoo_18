<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="salesperson_filter_tree_view.Selection"
       t-inherit="web.ListRenderer" t-inherit-mode="extension"
       owl="1">
        <xpath expr="//list" position="before">
            <div>Selection:
                <select name="partner_id">
                    <option value="">select...</option>
                    <t t-foreach="partner or []" t-as="partner_id">
                        <option t-att-value="partner_id.id" class="d-none">
                            <t t-esc="partner_id.name"/>
                        </option>
                    </t>
                </select>
            </div>
        </xpath>
    </t>
</templates>

